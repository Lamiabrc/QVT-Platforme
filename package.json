{
  "name": "qvt-platform",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:qvtbox": "npm --workspace apps/qvtbox run dev",
    "build:qvtbox": "npm --workspace apps/qvtbox run build",
    "build:all": "npm run build:qvtbox",
    "typecheck:all": "npm --workspace apps/qvtbox run typecheck",
    "lint:all": "npm --workspace apps/qvtbox run lint",
    "lint": "npm run lint:all",
    "typecheck": "npm run typecheck:all"
  }
}
